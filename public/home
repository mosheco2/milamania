  <script>
      // 注转 专 祝 转
      fetch('/api/banners')
        .then(response => response.json())
        .then(data => {
            // 砖砖 转 转转 驻转 'home'
            const bannerData = data.home;
            if (bannerData && bannerData.imageUrl) {
                const bannerContainer = document.getElementById('page-banner-container');
                const bannerLink = document.getElementById('page-banner-link');
                const bannerImg = document.getElementById('page-banner-img');

                bannerImg.src = bannerData.imageUrl;
                bannerLink.href = bannerData.linkUrl || '#';
                bannerContainer.style.display = 'block';
            }
        })
        .catch(error => console.error('砖 注转 专:', error));
  </script>
